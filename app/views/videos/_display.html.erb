<div class="videosection">
  <h4 class="videoheading"><%= t '.videos' %></h4>
</div>
<div class="videos">
  <% @submission.videos.each do |video| %>
  <div style='position: relative;' class='video'>
    <a href=<%= video.url %> class='popup-youtube'>
      <img src=<%= video.thumbnail ? video.thumbnail : image_path('addvideothumb.png') %> class="vidthumb">
    </a>
    <% if can_manage(@submission) %>
    <%= link_to submission_video_path(@submission, video), method: :delete, data: {confirm: t('common.sure') } do %>
    <span class='fa fa-trash delete-video'></span>
    <% end %>
    <% end %>
  </div>
  <% end %>
  <%= link_to image_tag('addvideothumb.png', class: 'vidthumb'), '#add-video', class: 'add-video-button', title: t('.add_video') %>
</div>
