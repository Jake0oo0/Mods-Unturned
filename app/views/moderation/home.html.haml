:css
  table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
  }
  table {
    width: 100%;
  }
  th, td {
      padding: 5px;
      text-align: left;
  }
%div
#centerpage
  = render 'shared/tabs'
  #mainpagewrap
    .box.effect1
      %h2 Moderation
    .mainpageleft
      - if @downloads.any?
        %table
          %tr
            %th Project Name
            %th File Name
            %th Uploader
            %th{colspan: 2} Actions
          - @downloads.each do |download|
            = puts download.inspect
            %tr
              %td
                = link_to download.submission.name, download.submission
              %td
                = link_to download.download.file.filename, download.download.url
              %td
                = link_to download.submission.user.username, user_uploads_path(download.submission.user.username)
              %td
                .approve{align: "center"}
                  = link_to 'Approve', submission_download_approve_path(download.submission, download)
              %td
                .deny{align: "center"}
                  = link_to 'Deny', submission_download_deny_path(download.submission, download)
      - else
        #none{align: "center"} No downloads awaiting moderation.
    #mainpage