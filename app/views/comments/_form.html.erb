<%= form_for([@submission, @submission.comments.build]) do |f| %>
  <%= f.text_area :text, class: 'feedback', :placeholder => "What do you think?", style: "display:inline;", autocomplete: 'off' %>
  <%= f.submit 'Comment', class: 'text-box', style: "display:inline;", :data => { :disable_with => "Saving" } %>
<% end %>
