<%= form_for([@submission, @submission.comments.build]) do |f| %>
  <%= f.text_field :text, class: 'feedback', :placeholder => t('.what_you_think'), style: "display:inline;", autocomplete: 'off' %>
  <%= f.submit t('.comment'), class: 'text-box', style: "display:inline;", :data => { :disable_with => t('common.saving') } %>
<% end %>
