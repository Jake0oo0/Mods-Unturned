      <%= render 'shared/alerts' %>
    </div>

  </div>
  <div class="iconheaderbar">
    <div id="tabs">
      <div class="menu">
        <a class="menuimgwrap <%= get_active('home', 'active-image') %>" href=<%= root_path %>></a> 
        <a class="menuimgwrap <%= get_active('users', 'active-image') %>" href=""></a>       
        <a class="menuimgwrap <%= get_active('submissions', 'active-image') %>" href=<%= projects_path(:type => "levels") %>></a>
        <a class="menuimgwrap <%= get_active('submissions', 'active-image') %>" href=<%= projects_path(:type => "models") %>></a>
