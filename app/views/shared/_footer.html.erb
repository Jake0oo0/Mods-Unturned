    </tr>
    <tr>
      <td colspan="3" class="socialmedialogos">
        <%= link_to image_tag('facebook.png', class: 'socialmediaimg', alt: t('.facebook')), "https://www.facebook.com/pages/Mods-Unturnedcom/846719095349217", target: "_blank" %>
