<div id="centerpage">
  <%= render 'shared/tabs' %>
  <div id="mainpagewrap"> 

    <div class="box effect1">
      <h2><%= t '.home' %> </h2>
    </div>        

    <div class="mainpageleft">
      <table class="homeupperlayout">
        <tr>
          <td class="homesubtitle"><img src=<%= image_path('popular.png') %> /> <%= t '.today_popular' %> </td>
          <td class="homesubtitle"><%= t '.this_week' %> <img src=<%= image_path('thisweekarrow.png') %> /></td>
        </tr>
      </tr>
      <tr>
        <td class="todaymostpopular"> 
          <div class="mostpopularcontent">
            <div id="slider" class="nivoSlider mainthumblarge">
              <% @slider.each do |img| %>
              <a href="<%= submission_path(img) %>"><img style="height: 100%;" src="<%= img ? img.main_image.image_url : image_path('uploadthumb.png')  %>" alt="" title="<%= img.name %>" /></a>
              <% end %>
            </div>
          </div>
          <script>
            $('#slider').nivoSlider({
                effect: 'slideInRight',               // Specify sets like: 'fold,fade,sliceDown'
                slices: 15,                     // For slice animations
                boxCols: 8,                     // For box animations
                boxRows: 4,                     // For box animations
                animSpeed: 500,                 // Slide transition speed
                pauseTime: 6000,                // How long each slide will show
                startSlide: 0,                  // Set starting Slide (0 index)
                directionNav: false,             // Next & Prev navigation
                controlNav: false,               // 1,2,3... navigation
                controlNavThumbs: false,        // Use thumbnails for Control Nav
                pauseOnHover: true,             // Stop animation while hovering
                manualAdvance: false,           // Force manual transitions
                prevText: '',               // Prev directionNav text
                nextText: '',               // Next directionNav text
                randomStart: false,             // Start on a random slide
                beforeChange: function(){},     // Triggers before a slide transition
                afterChange: function(){},      // Triggers after a slide transition
                slideshowEnd: function(){},     // Triggers after all slides have been shown
                lastSlide: function(){},        // Triggers when last slide is shown
                afterLoad: function(){}         // Triggers when slider has loaded
            });
          </script>
        </td>
        <td class="community"> 
          <table>
            <tr><td class="toplisttitle"><%= t '.top_developers' %></td></tr>
            <% @weekly_developers.each do |s| %>
            <tr><td class="toplistitem"><a href=<%= user_uploads_path(s.username) %>><%= s.username %></a></td></tr>
            <% end %>
            <tr><td class="toplisttitle"><%= t '.top' %></td></tr>  
            <% @weekly_submissions.each do |s| %>
            <tr><td class="toplistitem"><a href=<%= submission_path(s) %>><%= s.name %></a></td></tr>
            <% end %>
          </table>
        </td>
      </tr>
    </table>
    <br /><!--<hr />--><br />
    <table class="homelowerlayout">
      <tr>
        <td class="homesubtitle"><img src=<%= image_path('updated.png') %> /> <%= t '.recently_updated' %> </td>
        <td class="homesubtitle unturnednewstitle"><img src=<%= image_path('unturnednews.png') %> /> <%= t '.unturned_news' %> </td>
      </tr>
      <tr class="contentboxes">
        <td class="recentlyupdatedmods">
          <% @recent.each do |recent| %>
          <div class="content">
            <a href=<%= submission_path(recent) %>><img src=<%= recent.main_image.image_url %> class="levelthumb"></a>
            <div class="contentdetails">
              <h4 style= "height: 18px; overflow: hidden; word-wrap: break-word;"><a href=<%= submission_path(recent) %>><%= recent.name %></a></h4>
              <div class="madebyuser"><a href=<%= user_uploads_path(recent.user.username) %>><%= recent.user.username %></a><div class="downloadcount">&nbsp;&bull; <%= recent.download_count %> <img src=<%= image_path('downarrow.png') %> /></div></div> 
              <div class="contentdesc"><%= recent.desc %></div>
            </div>            
          </div>
          <% end %>

          <a href=<%= projects_path(:sort => "updated") %>><div class="see_more_recent_button"> <%= t '.see_more' %> </div></a>
        </td>

        <td class="unturnedupdates">

          <div class="unturnednewsbubble">
            <div class="unturnednewsbubbleheading"><%= t '.news_loading_title' %> </div>
            <div class="unturnednewsbubbletextarea"><%= t '.news_loading_body' %>              

            </div>
            <div class="unturnednewsbubblereadmore"><a class="readmoretext" href="" target="_blank"><%= t '.news_read_more' %></a> </div>
          </div>                    
        </td>

      </tr>

      <tr>
        <td colspan="2"><br /></td>
      </tr>
      <tr>
        <td colspan="2"></td>
      </tr>               
      <tr>
        <td colspan="2"><br /></td>
      </tr>             
      <tr>
        <td class="homesubtitle" colspan="2">
          <img src=<%= image_path('popular.png') %> /> <%= t '.staff_favorites' %>
        </td>
      </tr>             
      <tr>
        <td style="width:860px;"colspan="2">
          <% @favorites.each do |favorite| %>
          <div class="content">
            <a href=<%= submission_path(favorite) %>><img src=<%= favorite.get_cached_image %> class="levelthumb"></a>
            <div class="contentdetails">
              <h4 style= "height: 18px; overflow: hidden; word-wrap: break-word;"><a href=<%= submission_path(favorite) %>><%= favorite.name %></a></h4>
              <div class="madebyuser"><a href=<%= user_uploads_path(favorite.user.username) %>><%= favorite.user.username %></a><div class="downloadcount">&nbsp;&bull; <%= favorite.download_count %> <img src=<%= image_path('downarrow.png') %> /></div></div> 
              <div class="contentdesc"><%= favorite.desc %></div>
            </div>            
          </div>
          <% end %>
        </td>
      </tr>   
      <tr>
        <td colspan="2"><br /></td>
      </tr>               
      <tr>
        <td class="homesubtitle quicklinkstitle" colspan="2">
          <%= t '.quick_links' %>
        </td>
        <tr>
          <td  class="quicklinkswrap" colspan="2">
            <div>
              <%= link_to (t '.about_mods_unturned'), about_path, class: 'quicklinkitem' %>
              <%= link_to (t '.tutorials'), "https://www.youtube.com/playlist?list=PLOjtCLyAWSfkJSZn4NdBsqvZKZhWOQ29q", class: 'quicklinkitem', target: '_blank' %>
              <%= link_to (t '.item_id_list'), "http://www.reddit.com/r/unturned/comments/2njy5b/unturned_id_list/", class: 'quicklinkitem', target: '_blank' %>
              <%= link_to (t '.facebook_page'), "https://www.facebook.com/pages/Mods-Unturnedcom/846719095349217", class: 'quicklinkitem', target: '_blank' %>
              <%= link_to (t '.twitter_page'), "https://twitter.com/Mods_Unturned", class: 'quicklinkitem', target: '_blank' %>
              <%= link_to (t '.unturned_steam'), "http://steamcommunity.com/app/304930", class: 'quicklinkitem', target: '_blank' %>
            </div>
          </td>
        </tr>               
      </tr>             
    </table>
  </div>          
  <div id="mainpage">
  </div>
</div>