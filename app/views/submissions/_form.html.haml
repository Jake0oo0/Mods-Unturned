= form_for(@submission) do |f|
  = render 'shared/errors', object: @submission
  %p
    = f.label :name
    %br/
    = f.text_field :name, style: 'width: 300px;'
  %p
    = f.label :body
    %br/
    = f.text_area :body, rows: 10, style: 'width: 400px;'
  %p
    = f.label :type
    %br/
    = f.select(:type, ['Level', 'Asset'].map { |value| [ value, value ] })
  %p
    = f.submit 'Submit'
