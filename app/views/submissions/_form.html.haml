= form_for(@submission) do |f|
  = render 'shared/errors', object: @submission
  %p
    = f.label :name
    %br/
    = f.text_field :name, class: 'form-control'
  %p
    = f.label :body
    %br/
    = f.text_area :body, class: 'form-control', rows: 8
  %p
    = f.submit, 'Submit', class: 'btn btn-primary'
